<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ruler_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/graphic_scale_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_narrow_regular"
                android:paddingVertical="5dp"
                android:paddingLeft="3dp"
                android:text="1 : "
                android:textColor="@color/black"
                android:textSize="@dimen/calculator_numbers_size" />

            <!--<TextView
                android:id="@+id/scale_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_narrow_regular"
                android:onClick="showScaleMenu"
                android:paddingVertical="5dp"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="@dimen/calculator_numbers_size" />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/scale_factor"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingVertical="5dp"
                android:paddingEnd="15dp"
                android:background="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:drawableRight="@drawable/ic_scale_menu_arrow"
                android:text="100"
                android:fontFamily="@font/archivo_narrow_regular"
                android:textSize="@dimen/calculator_numbers_size"
                android:onClick="showScaleMenu"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/unities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/archivo_narrow_regular"
                android:inputType="numberDecimal"
                android:maxWidth="90dp"
                android:text="1"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/calculator_numbers_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_narrow_regular"
                android:text="m = "
                android:textColor="@color/black"
                android:textSize="@dimen/calculator_numbers_size" />

            <EditText
                android:id="@+id/scaled_unities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/archivo_narrow_regular"
                android:inputType="numberDecimal"
                android:maxWidth="90dp"
                android:text="1"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/calculator_numbers_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_narrow_regular"
                android:text="cm"
                android:textColor="@color/black"
                android:textSize="@dimen/calculator_numbers_size" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/screen_data"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GRAPHIC RULER"
        android:fontFamily="@font/archivo_narrow_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <ImageView
        android:id="@+id/object_scale_view"
        android:layout_width="240px"
        android:layout_height="800px"
        android:layout_gravity="end"
        android:layout_marginStart="50dp"
        android:src="@drawable/object_scale_human"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>